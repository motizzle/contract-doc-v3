{
    "name": "server",
    "version": "1.0.0",
    "description": "Server backend (Node).`n- src: source code`n- config: env/config files`n- scripts: server ops scripts`n- tests: integration/unit tests",
    "main": "index.js",
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "start": "node src/server.js",
        "start:production": "NODE_ENV=production node src/server.js",
        "test": "cross-env NODE_ENV=test jest --config jest.config.js",
        "test:ui": "cross-env NODE_ENV=test playwright test e2e/hardening-full-flow.spec.ts --config=e2e/playwright.config.ts",
        "test:ui:headed": "cross-env NODE_ENV=test playwright test e2e/hardening-full-flow.spec.ts --config=e2e/playwright.config.ts --headed",
        "test:ui:debug": "playwright test e2e/hardening-full-flow.spec.ts --config=e2e/playwright.config.ts --headed --debug",
        "e2e:install": "npx playwright install --with-deps",
        "e2e": "playwright test --config=e2e/playwright.config.ts",
        "stress": "powershell -NoProfile -ExecutionPolicy Bypass -File ..\\tools\\scripts\\run-stress-local.ps1 -Iterations 30 -DelayMs 200 -Users user1,user2",
        "vendor:react": "node scripts/vendor-react.js",
        "vendor:superdoc": "node scripts/vendor-superdoc.js"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@harbour-enterprises/superdoc": "^0.28.1",
        "compression": "^1.8.1",
        "cookie-parser": "^1.4.7",
        "diff-match-patch": "^1.0.5",
        "express": "^5.1.0",
        "express-rate-limit": "^8.1.0",
        "geoip-lite": "^1.4.10",
        "http-proxy-middleware": "^2.0.6",
        "joi": "^18.0.1",
        "jsonwebtoken": "^9.0.2",
        "mammoth": "^1.11.0",
        "mongodb": "^6.20.0",
        "multer": "^2.0.2",
        "office-addin-dev-certs": "^2.0.3",
        "pdf-lib": "^1.17.1",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.46.1",
        "cross-env": "^10.1.0",
        "jest": "^29.7.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    }
}
