# Server Configuration
NODE_ENV=production
PORT=10000
BASE_URL=https://your-app.onrender.com

# JWT Authentication (REQUIRED for production)
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-change-me

# LLM Configuration (optional - defaults to Ollama)
LLM_PROVIDER=ollama
LLM_USE_OPENAI=false
OLLAMA_MODEL=llama3.2:3b
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Document ID (optional)
DOCUMENT_ID=default

# Test Mode (disable for production)
TEST_MODE=false

